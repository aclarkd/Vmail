<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lasso_vmail.orm.entity_manager.class">Doctrine\ORM\EntityManager</parameter>
        <parameter key="lasso_vmail.mailbox_manager.class">Lasso\VmailBundle\MailboxManager</parameter>
        <parameter key="lasso_vmail.alias_repository.class">Lasso\VmailBundle\Repository\AliasRepository</parameter>
        <parameter key="lasso_vmail.domain_repository.class">Lasso\VmailBundle\Repository\DomainRepository</parameter>
        <parameter key="lasso_vmail.email_repository.class">Lasso\VmailBundle\Repository\EmailRepository</parameter>
        <parameter key="lasso_vmail.mailbox_repository.class">Lasso\VmailBundle\Repository\MailboxRepository</parameter>
        <parameter key="lasso_vmail.doctrine_repository.class">Doctrine\ORM\EntityRepository</parameter>
    </parameters>

    <services>
        <service id="lasso_vmail.entity_manager"
                 class="%lasso_vmail.orm.entity_manager.class%"
                 factory-service="doctrine"
                 factory-method="getManager">
            <argument type="string">%lasso_vmail.entity_manager_name%</argument>
        </service>

        <service id="lasso_vmail.alias_repository" class="%lasso_vmail.alias_repository.class%"/>

        <service id="lasso_vmail.domain_repository" class="%lasso_vmail.domain_repository.class%"/>

        <service id="lasso_vmail.email_repository" class="%lasso_vmail.email_repository.class%"/>

        <service id="lasso_vmail.mailbox_repository" class="%lasso_vmail.mailbox_repository.class%"/>

        <service id="lasso_vmail.mailbox_manager" class="%lasso_vmail.mailbox_manager.class%">
            <argument type="service" id="lasso_vmail.entity_manager"/>
            <argument type="service" id="lasso_vmail.alias_repository"/>
            <argument type="service" id="lasso_vmail.domain_repository"/>
            <argument type="service" id="lasso_vmail.email_repository"/>
            <argument type="service" id="lasso_vmail.mailbox_repository"/>
            <argument type="service" id="logger"/>
        </service>
    </services>
</container>

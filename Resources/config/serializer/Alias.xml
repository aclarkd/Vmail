           accessor-order="custom" custom-accessor-order="id,source,destination">
        <property name="id"
                  expose="true"
                  type="integer"
                  accessor-getter="getId"
                  since-version="1.0"/>
        <property name="source"
                  expose="true"
                  type="string"
                  accessor-getter="getSourceEmailString"
